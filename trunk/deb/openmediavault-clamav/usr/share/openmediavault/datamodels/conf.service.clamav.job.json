{
	"type": "config",
	"id": "conf.service.clamav.job",
	"title": "ClamAV Antivirus scan job",
	"queryinfo": {
		"xpath": "//services/clamav/jobs/job",
		"iterable": true,
		"idproperty": "uuid"
	},
	"properties": {
		"uuid": {
			"type": "string",
			"format": "uuidv4"
		},
		"enable": {
			"type": "boolean",
			"default": false
		},
		"sharedfolderref": {
			"type": "string",
			"format": "uuidv4"
		},
		"minute": {
			"type": "string",
			"pattern": "/^[0-9]|1[0-9]|2[0-9]|3[0-9]|4[0-9]|5[0-9]|[*]$/"
		},
		"everynminute": {
			"type": "boolean",
			"default": false
		},
		"hour": {
			"type": "string",
			"pattern":"/^[0-9]|1[0-9]|2[0-3]|[*]$/"
		},
		"everynhour": {
			"type":"boolean",
			"default": false
		},
		"month": {
			"type": "string",
			"pattern": "/^[1-9]|1[0-2]|[*]$/"
		},
		"dayofmonth": {
			"type": "string",
			"pattern": "/^[1-9]|1[0-9]|2[0-9]|3[0-1]|[*]$/"
		},
		"everyndayofmonth": {
			"type": "boolean",
			"default": false
		},
		"dayofweek": {
			"type": "string",
			"pattern": "/^[1-7]|[*]$/"
		},
		"sendemail": {
			"type": "boolean",
			"default": false
		},
		"onaccess": {
			"type": "boolean",
			"default": false
		},
		"virusaction": {
			"type": "string",
			"enum": [ "nothing", "quarantine", "delete" ],
			"default": "nothing"
		},
		"verbose": {
			"type": "boolean",
			"default": false
		},
		"multiscan": {
			"type": "boolean",
			"default": false
		},
		"comment": {
			"type": "string",
			"default": ""
		}
	}
}
