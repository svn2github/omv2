set -e

. /etc/default/openmediavault
. /usr/share/openmediavault/scripts/helper-functions

OMV_SHAIRPORT_CONFIG=${OMV_SHAIRPORT_CONFIG:-"/etc/shairport-sync.conf"}
OMV_SHAIRPORT_OUTPUTBACKEND=${OMV_SHAIRPORT_OUTPUTBACKEND:-"alsa"}
OMV_SHAIRPORT_MDNSBACKEND=${OMV_SHAIRPORT_MDNSBACKEND:-"avahi"}

mkconf() {
	# Create '/etc/shairport-sync.conf' file
	xmlstarlet sel -t -m "//services/shairport" \
	  -o "# This configuration file is auto-generated." -n \
	  -o "# WARNING: Do not edit this file, your changes will be lost." -n \
	  -o "general = " -n \
	  -o "{" -n \
	  -i "string-length(name) > 0" -v "concat('  name = "',name,'"')" -n -b \
	  -o "  output_backend = \"${OMV_SHAIRPORT_OUTPUTBACKEND}\"" -n \
	  -o "  mdns_backend = \"${OMV_SHAIRPORT_MDNSBACKEND}\"" -n \
	  -i "passwordrequired[. = '1']" \
		-v "concat('  password = \"',password,'\";')" -n \
	  -b \
	  -o "};" \
	  ${OMV_CONFIG_FILE} | xmlstarlet unesc > ${OMV_SHAIRPORT_CONFIG}
}

case "$1" in
	mkconf|*)
		mkconf
		;;
esac
