set -e

. /etc/default/openmediavault

OMV_MKCONF_SCRIPTS_DIR=${OMV_MKCONF_SCRIPTS_DIR:-"/usr/share/openmediavault/mkconf"}

OMV_CERTIFICATES_EXTENSIONS_DIR=${OMV_CERTIFICATES_EXTENSIONS_DIR:-"${OMV_MKCONF_SCRIPTS_DIR}/certificates.d"}

# Build the certificate files.
run-parts --exit-on-error ${OMV_CERTIFICATES_EXTENSIONS_DIR}
