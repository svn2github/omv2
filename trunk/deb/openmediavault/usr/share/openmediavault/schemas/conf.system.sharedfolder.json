{
	"type": "config",
	"id": "conf.system.sharedfolder",
	"title": "Shared folder",
	"dbbackend": {
		"xpath": "//system/shares/sharedfolder",
		"iterable": true,
		"idproperty": "uuid",
		"refproperty": "sharedfolderref"
	},
	"properties": {
		"uuid": {
			"type": "string",
			"format": "uuidv4"
		},
		"name": {
			"type": "string"
		},
		"comment": {
			"type": "string"
		},
		"mntentref": {
			"type": "string"
		},
		"reldirpath": {
			"type": "string"
		},
		"privileges": {
			"type": "array",
			"items": {
				"$ref": "//system/shares/sharedfolder/privileges/privilege"
			}
		}
	}
}
