{
	"type": "config",
	"id": "conf.service.smb.share",
	"title": "SMB/CIFS share",
	"queryinfo": {
		"xpath": "//services/smb/shares/share",
		"iterable": true,
		"idproperty": "uuid"
	},
	"properties": {
		"uuid": {
			"type": "string",
			"format": "uuidv4"
		},
		"enable": {
			"type": "boolean",
			"default": 0
		},
		"sharedfolderref": {
			"type": "string",
			"format": "uuidv4"
		},
		"name": {
			"type": "string"
		},
		"comment": {
			"type": "string"
		},
		"guest": {
			"type": "string",
			"enum": [ "no", "allow", "only" ]
		},
		"readonly": {
			"type": "boolean"
		},
		"browseable": {
			"type": "boolean"
		},
		"recyclebin": {
			"type": "boolean"
		},
		"recyclemaxsize": {
			"type": "boolean"
		},
		"recyclemaxage": {
			"type": "boolean"
		},
		"hidedotfiles": {
			"type": "boolean"
		},
		"inheritacls": {
			"type": "boolean"
		},
		"inheritpermissions": {
			"type": "boolean"
		},
		"easupport": {
			"type": "boolean"
		},
		"storedosattributes": {
			"type": "boolean"
		},
		"hostsallow": {
			"type": "string"
		},
		"hostsdeny": {
			"type": "string"
		},
		"audit": {
			"type": "boolean"
		},
		"extraoptions": {
			"type": "string"
		}
	}
}
