{
	"type": "config",
	"id": "conf.service.smb",
	"alias": "//services/smb",
	"title": "SMB/CIFS",
	"properties": {
		"enable": {
			"type": "boolean",
			"default": 0
		},
		"workgroup": {
			"type": "string",
			"default": "WORKGROUP"
		},
		"serverstring": {
			"type": "string",
			"default": "%h server"
		},
		"loglevel": {
			"type": "integer",
			"default": 0
		},
		"usesendfile": {
			"type": "boolean",
			"default": 1
		},
		"aio": {
			"type": "boolean",
			"default": 1
		},
		"nullpasswords": {
			"type": "boolean",
			"default": 0
		},
		"localmaster": {
			"type": "boolean",
			"default": 1
		},
		"timeserver": {
			"type": "boolean",
			"default": 0
		},
		"winssupport": {
			"type": "boolean",
			"default": 0
		},
		"winsserver": {
			"type": "string"
		},
		"homesenable": {
			"type": "boolean",
			"default": 0
		},
		"homesbrowseable": {
			"type": "boolean",
			"default": 0
		},
		"extraoptions": {
			"type": "string"
		},
		"shares": {
			"type": "object",
			"properties": {
				"share": {
					"type": "array",
					"items": {
						"type": "object",
						"properties": {
							"uuid": {
								"type": "string",
								"format": "uuidv4"
							},
							"enable": {
								"type": "boolean",
								"default": 0
							},
							"sharedfolderref": {
								"type": "string",
								"format": "uuidv4"
							},
							"name": {
								"type": "string"
							},
							"comment": {
								"type": "string"
							},
							"guest": {
								"type": "string",
								"enum": [ "no", "allow", "only" ]
							},
							"readonly": {
								"type": "boolean"
							},
							"browseable": {
								"type": "boolean"
							},
							"recyclebin": {
								"type": "boolean"
							},
							"recyclemaxsize": {
								"type": "boolean"
							},
							"recyclemaxage": {
								"type": "boolean"
							},
							"hidedotfiles": {
								"type": "boolean"
							},
							"inheritacls": {
								"type": "boolean"
							},
							"inheritpermissions": {
								"type": "boolean"
							},
							"easupport": {
								"type": "boolean"
							},
							"storedosattributes": {
								"type": "boolean"
							},
							"hostsallow": {
								"type": "string"
							},
							"hostsdeny": {
								"type": "string"
							},
							"audit": {
								"type": "boolean"
							},
							"extraoptions": {
								"type": "string"
							}
						}
					}
				}
			}
		}
	}
}
