{
	"type": "object",
	"id": "rpc.rsync.set",
	"properties": {
		"uuid": {
			"type": "string",
			"oneOf": [{
				"type": "string",
				"format": "uuidv4"
			},{
				"type": "string",
				"format": "undefined"
			}],
			"required": true
		},
		"enable": {
			"type": "boolean",
			"required": true
		},
		"sendemail": {
			"type": "boolean",
			"required": true
		},
		"comment": {
			"type": "string",
			"required": true
		},
		"type":{
			"type": "string",
			"enum": [ "local", "remote" ],
			"required": true
		},
		"srcsharedfolderref": {
			"type": "string",
			"format": "uuidv4",
			"required": true
		},
		"srcuri": {
			"type": "string",
			"required": true
		},
		"destsharedfolderref": {
			"type": "string",
			"format": "uuidv4",
			"required": true
		},
		"desturi": {
			"type": "string",
			"required": true
		},
		"minute": {
			"type": "string",
			"pattern": "/^[0-9]|1[0-9]|2[0-9]|3[0-9]|4[0-9]|5[0-9]|[*]$/",
			"required": true
		},
		"everynminute": {
			"type": "boolean",
			"required": true
		},
		"hour": {
			"type": "string",
			"pattern":"/^[0-9]|1[0-9]|2[0-3]|[*]$/",
			"required": true
		},
		"everynhour": {
			"type":"boolean",
			"required": true
		},
		"month": {
			"type": "string",
			"pattern": "/^[1-9]|1[0-2]|[*]$/",
			"required": true
		},
		"dayofmonth": {
			"type": "string",
			"pattern": "/^[1-9]|1[0-9]|2[0-9]|3[0-1]|[*]$/",
			"required": true
		},
		"everyndayofmonth": {
			"type": "boolean",
			"required": true
		},
		"dayofweek": {
			"type": "string",
			"pattern": "/^[1-7]|[*]$/",
			"required": true
		},
		"recursive": {
			"type": "boolean",
			"required": true
		},
		"times": {
			"type": "boolean",
			"required": true
		},
		"compress": {
			"type": "boolean",
			"required": true
		},
		"archive": {
			"type": "boolean",
			"required": true
		},
		"delete": {
			"type": "boolean",
			"required": true
		},
		"quiet": {
			"type":"boolean",
			"required": true
		},
		"perms": {
			"type": "boolean",
			"required": true
		},
		"acls": {
			"type": "boolean",
			"required": true
		},
		"xattrs":{
			"type": "boolean",
			"required": true
		},
		"dryrun": {
			"type": "boolean",
			"required": true
		},
		"partial": {
			"type": "boolean",
			"required": true
		},
		"extraoptions": {
			"type": "string",
			"required": true
		},
		"mode": {
			"type": "string",
			"enum": [ "push", "pull" ],
			"required": true
		},
		"authentication": {
			"type": "string",
			"enum": [ "password", "pubkey" ],
			"required": true
		},
		"password": {
			"type": "string",
			"required": true
		},
		"sshcertificateref":{
			"type": "string",
			"format": "uuidv4",
			"required": true
		},
		"sshport": {
			"type": "integer",
			"minimum": 1,
			"maximum": 65535,
			"required": true
		}
	}
}
