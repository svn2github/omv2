{
	"type": "config",
	"id": "conf.service.rsync.job",
	"title": "Rsync job",
	"queryinfo": {
		"xpath": "//services/rsync/jobs/job",
		"iterable": true,
		"idproperty": "uuid"
	},
	"properties": {
		"uuid": {
			"type": "string",
			"format": "uuidv4"
		},
		"enable": {
			"type": "boolean",
			"default": false
		},
		"sendemail": {
			"type": "boolean",
			"default": false
		},
		"comment": {
			"type": "string",
			"default": ""
		},
		"type":{
			"type": "string",
			"enum": [ "local", "remote" ],
			"default": "local"
		},
		"src": {
			"type": "string",
			"format": "uuidv4"
		},
		"dest": {
			"type": "string",
			"format": "uuidv4"
		},
		"minute": {
			"type": "string",
			"pattern": "/^[0-9]|1[0-9]|2[0-9]|3[0-9]|4[0-9]|5[0-9]|[*]$/"
		},
		"everynminute": {
			"type": "boolean"
		},
		"hour": {
			"type": "string",
			"pattern":"/^[0-9]|1[0-9]|2[0-3]|[*]$/"
		},
		"everynhour": {
			"type":"boolean",
			"default": false
		},
		"month": {
			"type": "string",
			"pattern": "/^[1-9]|1[0-2]|[*]$/"
		},
		"dayofmonth": {
			"type": "string",
			"pattern": "/^[1-9]|1[0-9]|2[0-9]|3[0-1]|[*]$/"
		},
		"everyndayofmonth": {
			"type": "boolean",
			"default": false
		},
		"dayofweek": {
			"type": "string",
			"pattern": "/^[1-7]|[*]$/"
		},
		"recursive": {
			"type": "boolean",
			"default": false
		},
		"times": {
			"type": "boolean",
			"default": false
		},
		"compress": {
			"type": "boolean",
			"default": false
		},
		"archive": {
			"type": "boolean",
			"default": false
		},
		"delete": {
			"type": "boolean",
			"default": false
		},
		"quiet": {
			"type":"boolean",
			"default": false
		},
		"perms": {
			"type": "boolean",
			"default": false
		},
		"acls": {
			"type": "boolean",
			"default": false
		},
		"xattrs":{
			"type": "boolean",
			"default": false
		},
		"dryrun": {
			"type": "boolean",
			"default": false
		},
		"partial": {
			"type": "boolean",
			"default": false
		},
		"extraoptions": {
			"type": "string",
			"default": ""
		},
		"mode": {
			"type": "string",
			"enum": [ "push", "pull" ],
			"default": "push"
		},
		"authentication": {
			"type": "string",
			"enum": [ "password", "pubkey" ],
			"default": "password"
		},
		"password": {
			"type": "string",
			"default": ""
		},
		"sshcertificateref":{
			"type": "string",
			"format": "uuidv4"
		},
		"sshport": {
			"type": "integer",
			"minimum": 1,
			"maximum": 65535,
			"default": 22
		}
	}
}
