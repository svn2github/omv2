{
	"type": "config",
	"id": "conf.service.smartmontools",
	"title": "S.M.A.R.T. self test job",
	"queryinfo": {
		"xpath": "//services/smart/scheduledtests/job",
		"iterable": true,
		"idproperty": "uuid"
	},
	"properties": {
		"uuid": {
			"type": "string",
			"format": "uuidv4"
		},
		"enable": {
			"type": "boolean",
			"default": 1
		},
		"devicefile": {
			"type": "string",
			"format": "devicefile",
			"default": ""
		},
		"type": {
			"type": "string",
			"default": "S",
			"enum": [ "S", "L", "C", "O" ]
		},
		"hour": {
			"type": "string",
			"pattern": "/^0[0-9]|1[0-9]|2[0-3]|[*]$/"
		},
		"month": {
			"type": "string",
			"pattern": "/^0[1-9]|1[0-2]|[*]$/"
		},
		"dayofmonth": {
			"type": "string",
			"pattern": "/^0[1-9]|1[0-9]|2[0-9]|3[0-1]|[*]$/"
		},
		"dayofweek": {
			"type": "string",
			"pattern": "/^[1-7]|[*]$/"
		},
		"comment": {
			"type": "string",
			"default": ""
		}
	}
}
