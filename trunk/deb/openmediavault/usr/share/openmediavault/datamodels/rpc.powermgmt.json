[{
	"type": "rpc",
	"id": "rpc.powermgmt.set",
	"params": {
		"type": "object",
		"properties": {
			"cpufreq": {
				"type": "boolean",
				"required": true
			},
			"powerbtn": {
				"type": "string",
				"required": true,
				"enum": [ "nothing", "shutdown", "standby" ]
			}
		}
	}
},{
	"type": "rpc",
	"id": "rpc.powermgmt.setscheduledjob",
	"params": {
		"type": "object",
		"properties": {
			"uuid": {
				"type": "string",
				"oneOf": [{
					"type": "string",
					"format": "uuidv4"
				},{
					"type": "string",
					"format": "uuidv4undef"
				}],
				"required": true
			},
			"enable": {
				"type": "boolean",
				"required": true
			},
			"type": {
				"type": [ "string", "null" ],
				"required": true,
				"enum": [ "reboot", "shutdown", "standby" ]
			},
			"execution": {
				"type": "string",
				"required": true,
				"enum": [
					"exactly",
					"hourly",
					"daily",
					"weekly",
					"monthly",
					"yearly"
				]
			},
			"minute": {
				"type": "string",
				"required": true,
				"pattern": "/^[0-9]|1[0-9]|2[0-9]|3[0-9]|4[0-9]|5[0-9]|[*]$/"
			},
			"everynminute": {
				"type": "boolean",
				"required": true
			},
			"hour": {
				"type": "string",
				"required": true,
				"pattern": "/^[0-9]|1[0-9]|2[0-3]|[*]$/"
			},
			"everynhour": {
				"type": "boolean",
				"required": true
			},
			"month": {
				"type": "string",
				"required": true,
				"pattern":"/^[1-9]|1[0-2]|[*]$/"
			},
			"dayofmonth": {
				"type": "string",
				"required": true,
				"pattern": "/^[1-9]|1[0-9]|2[0-9]|3[0-1]|[*]$/"
			},
			"everyndayofmonth": {
				"type": "boolean",
				"required": true
			},
			"dayofweek": {
				"type": "string",
				"required": true,
				"pattern": "/^[1-7]|[*]$/"
			},
			"comment": {
				"type": "string",
				"required": true
			}
		}
	}
}]
